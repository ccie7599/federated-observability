{
  "annotations": { "list": [] },
  "editable": true,
  "graphTooltip": 1,
  "id": null,
  "panels": [
    {
      "title": "Export Success Rate by Destination",
      "type": "stat",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "1 - (rate(otelcol_exporter_send_failed_spans_total[5m]) / rate(otelcol_exporter_sent_spans_total[5m]))",
          "legendFormat": "{{exporter}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 0.95 },
              { "color": "green", "value": 0.99 }
            ]
          }
        }
      }
    },
    {
      "title": "Splunk HEC - Throughput & Errors",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "targets": [
        {
          "expr": "rate(otelcol_exporter_sent_log_records_total{exporter=\"splunk_hec\"}[5m])",
          "legendFormat": "sent"
        },
        {
          "expr": "rate(otelcol_exporter_send_failed_log_records_total{exporter=\"splunk_hec\"}[5m])",
          "legendFormat": "failed"
        }
      ]
    },
    {
      "title": "Datadog - Throughput & Errors",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "targets": [
        {
          "expr": "rate(otelcol_exporter_sent_spans_total{exporter=\"datadog\"}[5m])",
          "legendFormat": "traces sent"
        },
        {
          "expr": "rate(otelcol_exporter_sent_metric_points_total{exporter=\"datadog\"}[5m])",
          "legendFormat": "metrics sent"
        }
      ]
    },
    {
      "title": "Kafka Consumer Lag by Router",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
      "targets": [
        {
          "expr": "kafka_consumer_group_lag",
          "legendFormat": "{{group}} - {{topic}}"
        }
      ]
    },
    {
      "title": "Queue Size per Destination",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 22 },
      "targets": [
        {
          "expr": "otelcol_exporter_queue_size",
          "legendFormat": "{{exporter}} - {{service_instance_id}}"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["observability", "destinations"],
  "time": { "from": "now-1h", "to": "now" },
  "title": "Federated Observability - Destination Health",
  "uid": "fed-obs-dest-health"
}
