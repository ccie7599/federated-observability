        {
          "expr": "sum by (cluster_id) (rate(otelcol_receiver_accepted_spans_total[5m]))",
          "legendFormat": "{{cluster_id}}"
        }
      ]
    },
    {
      "title": "Logs Received per Edge Cluster",
